{
  "name": "@remin/cardboard",
  "version": "0.0.0-dev",
  "type": "module",
  "module": "index.ts",
  "bin": {
    "cardboard": "bin/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/cli.js build --cwd examples/card_game",
