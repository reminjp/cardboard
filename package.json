    "start": "bin/index.js build --cwd examples/card_game",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "csv-parse": "5.6.0",
    "dotenv": "16.4.7",
    "esbuild": "0.25.0",
    "googleapis": "144.0.0",
    "lodash.groupby": "4.6.0",
    "pdf-lib": "1.17.1",
    "satori": "0.12.1",
    "smol-toml": "1.3.1",
    "svg-parser": "2.0.4",
    "yargs": "17.7.2",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/node-lts": "22.0.1",
    "@types/lodash.groupby": "4.6.9",
    "@types/svg-parser": "2.0.6",
    "@types/yargs": "17.0.33",
    "git-publish": "2.1.0",
    "lefthook": "1.10.10",
    "sort-package-json": "2.14.0"
  }
}